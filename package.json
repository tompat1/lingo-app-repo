{
  "name": "lingo-monorepo",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "concurrently \"pnpm dev:mobile\" \"pnpm dev:api\"",
    "dev:mobile": "pnpm -C apps/mobile start",
    "dev:api": "cd services/api && ./scripts/dev.sh",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
