    "language": "pl",
    "source": "Omstart baserad på 6 moduler + vecka 1-starter"
  },
  "module_1_mission_plan": {
    "prompt": "Definiera en 5-veckors plan för polska för [vardag i Polen / jobb / resa] med fokus på högfrekvent tal + lyssning. Exkludera låg-yield grammatikkapitlen. Format: Daglig rutin (20–40 min), Veckomål, Field missions (2–3 uppdrag/vecka), Minsta nödvändiga grammatik som mönster, Veckotest + justering.",
    "recommended_weeks": [
      "Vecka 1: Överlevnad & artighet (hälsa, tack, beställa, enkla frågor)",
      "Vecka 2: Praktisk vardag (butik, tider, priser, kollektivtrafik)",
      "Vecka 3: Socialt & småprat (träffa folk, intressen, planer)",
      "Vecka 4: Problem & service (fel på order, retur, ringa boka, klaga vänligt)",
      "Vecka 5: Flyt & Polish mode (snabbare tempo, naturliga fillers, mer lyssning)"
    ],
    "week_1_starter_pack": {
      "daily_routine": [
        "5 min: läsa 10 meningar högt",
        "10–15 min: lyssning + svara på checks",
        "5–10 min: rollspel (café/butik)",
        "5 min: repetera 10 SRS-ord"
      ],
      "weekly_goals": [
        "Kunna hälsa artigt och presentera dig kort",
        "Kunna beställa och betala",
        "Kunna be om repetition/långsammare",
        "Kunna fråga efter plats/tid"
      ],
      "field_missions": [
        "Beställ något på café med proszę + sak",
        "Fråga efter närmaste butik/przystanek",
        "Be om kvitto och säg tack/hej då"
      ],
      "grammar_patterns": [
        "Proszę + [sak]",
        "Czy mogę + [verb]...?",
        "Nie rozumiem / Nie wiem + [fortsättning]"
      ],
      "week_test": "15 snabba översättningar + 5 lyssningsmeningar + mini-dialog (6 repliker)."
    }
  },
